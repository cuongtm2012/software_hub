# SoftwareHub Docker Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:password@postgres:5432/softwarehub
REDIS_URL=redis://redis:6379
MONGODB_URL=mongodb://mongo:27017/softwarehub-chat

# SendGrid Email Service
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=your_verified_sender@domain.com

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Firebase Cloud Messaging
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_firebase_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Cloudflare R2 Storage
CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key_id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
CLOUDFLARE_R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com
CLOUDFLARE_R2_BUCKET=your_bucket_name

# Service URLs (Internal Docker Network)
EMAIL_SERVICE_URL=http://email-service:3001
CHAT_SERVICE_URL=http://chat-service:3002
NOTIFICATION_SERVICE_URL=http://notification-service:3003
WORKER_SERVICE_URL=http://worker-service:3004

# Application Configuration
NODE_ENV=production
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,https://yourdomain.com

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_METRICS=true