# Database Configuration
DATABASE_URL=postgresql://postgres:password@postgres:5432/softwarehub

# Session and Security
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
JWT_SECRET=your-jwt-secret-change-this-in-production

# Email Service Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# SMTP Alternative (if not using SendGrid)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key-here

# Firebase Push Notifications
FCM_VAPID_KEY=your-fcm-vapid-key
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase Private Key Here\n-----END PRIVATE KEY-----"

# Cloudflare R2 Storage
CLOUDFLARE_R2_ACCESS_KEY_ID=your-r2-access-key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-r2-secret-key
CLOUDFLARE_R2_BUCKET_NAME=your-bucket-name
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Cache and Queue
REDIS_URL=redis://redis:6379

# MongoDB
MONGODB_URL=mongodb://admin:password@mongo:27017/softwarehub-chat?authSource=admin

# Application Settings
NODE_ENV=production
PORT=5000
CLIENT_URL=http://localhost:5000

# Microservice URLs (for internal communication)
EMAIL_SERVICE_URL=http://email-service:3001
CHAT_SERVICE_URL=http://chat-service:3002
NOTIFICATION_SERVICE_URL=http://notification-service:3003