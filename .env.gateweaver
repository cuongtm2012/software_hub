# Gateweaver Environment Configuration
# This file contains environment variables used in gateweaver.yml

# CORS Configuration
CORS_ORIGIN=http://localhost:5000

# JWT Configuration (for secured endpoints)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Logging Configuration
LOG_LEVEL=info

# Service Health Status (dynamically updated by Gateweaver)
EMAIL_SERVICE_STATUS=unknown
CHAT_SERVICE_STATUS=unknown
NOTIFICATION_SERVICE_STATUS=unknown

# Gateway Configuration
GATEWAY_PORT=8080
HEALTH_PORT=8081
METRICS_PORT=8082

# Request Headers
REMOTE_ADDR=0.0.0.0
TIMESTAMP=2025-01-27T00:00:00Z