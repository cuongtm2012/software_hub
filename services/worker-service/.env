# Worker Service Environment Configuration
NODE_ENV=development
PORT=3004

# Redis Configuration
REDIS_URL=redis://localhost:6379

# External Service URLs (for development)
EMAIL_SERVICE_URL=http://localhost:3001
NOTIFICATION_SERVICE_URL=http://localhost:3003

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/softwarehub

# SendGrid Configuration (if needed for direct email sending)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Logging
LOG_LEVEL=info

# Worker Configuration
WORKER_CONCURRENCY=5
QUEUE_CHECK_INTERVAL=1000
HEALTH_CHECK_INTERVAL=30000